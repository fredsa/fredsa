<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .spinnerContainer {
      text-align: center;
      margin: 0.5em;
    }
    
    .spinner {
      background-color: #444;
      color: #fff;
      padding: 0.2em 1em;
    }
    
    .foo {
      border: 1px solid red;
      padding: 5px;
    }
    
    .searchBar {
      
    }
    
    .resultArea {
      white-space: nowrap;
    }
    
    .editArea {
      
    }
  </ui:style>
  <g:HTMLPanel>
    <div ui:field="spinner" class="{style.spinnerContainer}">
      <span class="{style.spinner}">Please wait...</span>
    </div>
    <g:FlowPanel ui:field="searchBarArea" styleName="{style.foo} {style.searchBar}"></g:FlowPanel>
    <g:HorizontalPanel>
      <g:FlowPanel ui:field="resultArea" styleName="{style.foo} {style.resultArea}"></g:FlowPanel>
      <g:FlowPanel ui:field="editArea" styleName="{style.foo} {style.editArea}"></g:FlowPanel>
    </g:HorizontalPanel>
  </g:HTMLPanel>
</ui:UiBinder> 