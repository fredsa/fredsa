<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .label {
      font-weight: bold;
      display: block;
      float: left;
      clear: left;
      width: 10em;
      padding: 0px;
      text-align: right;
      margin-right: 1em;
    }
    
    .field {
      display: inline;
      width: auto;
      clear: left;
    }
    
    .fieldset {
      width: 50em;
    }
    
    .row {
      float: left;
      clear: left;
      width: 100%;
      padding: 0.1em;
    }
  </ui:style>
  <g:FocusPanel ui:field="panel">
    <g:HTMLPanel>
      <fieldset label="person" class="{style.fieldset}">
        <legend>Person</legend>

        <div class="{style.row}">
          <g:Button ui:field="editButton">Edit</g:Button>
        </div>

        <div class="{style.row}">
          <label class="{style.label}" for="firstName">First Name:</label>
          <label class="{style.field}" ui:field="firstName"></label>
        </div>

        <div class="{style.row}">
          <label class="{style.label}">Last Name:</label>
          <label class="{style.field}" ui:field="lastName"></label>
        </div>

        <div class="{style.row}">
          <label class="{style.label}">Display Name:</label>
          <label class="{style.field}" ui:field="displayName"></label>
        </div>

        <div class="{style.row}">
          <label class="{style.label}">Enabled:</label>
          <input class="{style.field}" type="checkbox" ui:field="enabledCheckbox"
            enabled="false" />
        </div>

      </fieldset>
    </g:HTMLPanel>
  </g:FocusPanel>
</ui:UiBinder> 