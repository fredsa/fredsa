<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .container {
      background-color: #fafffa;
      padding: 0.3em;
      height: 100%;
    }
    
    .sql {
      width: 30em;
      height: 5em;
      white-space: normal;
    }
    
    .sp {
      border: 1px solid black;
      width: 100%;
      height: 500px;
    }
  </ui:style>
  <g:HTMLPanel styleName="{style.container}">
    <h2>Datastore</h2>
    <g:Button ui:field="initDatastore">Initialize App Engine datastore</g:Button>
    [
    <a target="ah_admin" href="/_ah/admin">/_ah/admin</a>
    ]
    [
    <a target="mr_status" href="/mapreduce/status">/mapreduce/status</a>
    ]

    <div style="border-top: 1px solid black; margin: 5px;" />

    <div>GQL query:</div>
    <g:TextArea ui:field="sql" styleName="{style.sql}"></g:TextArea>

    <g:Button ui:field="go">Go!</g:Button>

    <div>Results:</div>
    <g:ScrollPanel styleName="{style.sp}">
      <g:HTML ui:field="results"></g:HTML>
    </g:ScrollPanel>

  </g:HTMLPanel>
</ui:UiBinder> 